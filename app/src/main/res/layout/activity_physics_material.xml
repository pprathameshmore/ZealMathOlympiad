<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prathameshmore.zealmatholympiad.PhysicsMaterial">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/card_title"
                android:clickable="true"
                app:cardCornerRadius="@dimen/corner_radius">

                <TextView
                    android:id="@+id/pdfPhysics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center_vertical"
                    android:text="Reference Material"
                    android:textAlignment="center"
                    android:textSize="@dimen/study_text_card_view" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="@dimen/corner_radius">

                <TextView
                    android:id="@+id/practisePhysicsTest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center_vertical"
                    android:text="Practice Tests"
                    android:textAlignment="center"
                    android:textSize="@dimen/study_text_card_view" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="@dimen/corner_radius">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center_vertical"
                    android:text="Take a Test"
                    android:textAlignment="center"
                    android:textSize="@dimen/study_text_card_view" />

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
