<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prathameshmore.zealmatholympiad.AuthActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20px"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/get_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_box_size"
                    android:layout_marginTop="@dimen/space_between_two_comp"
                    android:hint="@string/mobile_number"
                    android:inputType="phone"/>

                <Button
                    android:id="@+id/btn_confirm_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_box_size"
                    android:layout_marginTop="@dimen/space_between_two_comp"
                    android:text="@string/confirm" />


                <!--      <EditText
                          android:id="@+id/getOTP"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="@dimen/text_box_size"
                          android:layout_marginTop="@dimen/space_between_two_comp"
                          android:hint="@string/confirm_msg"
                          android:inputType="numberDecimal" />

                      <Button
                          android:id="@+id/btn_otp_confirm"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="@dimen/text_box_size"
                          android:layout_marginTop="@dimen/space_between_two_comp"
                          android:inputType="numberDecimal"
                          android:text="@string/confirm" /> -->


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:clickable="true"
        android:layout_margin="@dimen/card_view"
        android:layout_below="@id/card_layout">

    <TextView
        android:id="@+id/help_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ripple_effect"
        android:gravity="center_vertical"
        android:text="@string/help_text"
        android:textAlignment="center"
         />
    </android.support.v7.widget.CardView>

</RelativeLayout>
