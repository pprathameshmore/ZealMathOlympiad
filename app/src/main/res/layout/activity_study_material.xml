<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prathameshmore.zealmatholympiad.StudyMaterial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardCornerRadius="@dimen/corner_radius">

            <com.antonionicolaspina.revealtextview.RevealTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_effect"
                android:text="@string/study_menu"
                android:textAlignment="center"
                android:textSize="@dimen/card_title"
                app:rtv_duration="5000"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/maths_card_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/card_title"
                android:clickable="true"
                app:cardCornerRadius="@dimen/corner_radius">

                <com.antonionicolaspina.revealtextview.RevealTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center_vertical"
                    android:text="Maths"
                    android:textAlignment="center"
                    android:textSize="@dimen/study_text_card_view"
                    app:rtv_duration="2000"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/phy_card_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="@dimen/corner_radius">

                <com.antonionicolaspina.revealtextview.RevealTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center_vertical"
                    android:text="Physics"
                    android:textAlignment="center"
                    android:textSize="@dimen/study_text_card_view"
                    app:rtv_duration="2000" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="@dimen/corner_radius">

                <com.antonionicolaspina.revealtextview.RevealTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center_vertical"
                    android:text="Chemistry"
                    android:textAlignment="center"
                    android:textSize="@dimen/study_text_card_view"
                    app:rtv_duration="2000"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
